<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rvText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#040303</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:background">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <style name="DatePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#FFDCC583</item>
    </style>

</resources>