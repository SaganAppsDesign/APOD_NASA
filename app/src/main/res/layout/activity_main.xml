<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apod.ui.view.activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/bg_title"
        android:fontFamily="@font/monserrat_alternates"
        android:padding="10dp"
        android:text="Introduce la cantidad de imÃ¡genes random que quieres ver de la BBDD de la NASA. Debe de ser menor a 50:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/svAPOD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/black" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svAPOD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:background="@color/cream"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="@color/black"
        android:queryHint="Astronomical Picture Of Day"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="Title" />


    <EditText
        android:id="@+id/etNumber"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_title"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#F6F4F4"
        android:textColorHint="#F4EFEF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btNumber"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_title"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="@+id/etNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toEndOf="@+id/etNumber"
        app:layout_constraintTop_toTopOf="@+id/etNumber" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAPODs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_apod" />

    <ProgressBar
        android:id="@+id/pbAPOD"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rvAPODs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvAPODs" />


</androidx.constraintlayout.widget.ConstraintLayout>